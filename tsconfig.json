{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "@assets": [
        "assets/"
      ],
      "@screen": [
        "screen/"
      ],
      "@component": [
        "component/"
      ],
      "@util/*": [
        "util/*"
      ],
      
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}